@page
@model Practica_Net_Core.Pages.PanelTiposProductos
@{
    ViewData["Title"] = "Lista de Tipos de Productos";
}

<h1>Tipos de Productos</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert" id="successMessage"> @TempData["SuccessMessage"] </div>
}

<p>
    <a asp-page="RegistrarTipoProducto" class="btn btn-primary">Crear Nuevo Tipo de Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Clave</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.tiposProductos)
        {
            <tr>
                <td>@item.clave</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-clave="@item.clave" style="display:inline;"> <button type="submit" class="btn btn-sm btn-danger">Eliminar</button> </form>
                    <a asp-page="EditarTipoProducto" asp-route-clave="@item.clave" class="btn btn-sm btn-secondary">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    setTimeout(function () { var successMessage = document.getElementById("successMessage"); if (successMessage) { successMessage.style.display = "none"; } }, 2000);
</script>